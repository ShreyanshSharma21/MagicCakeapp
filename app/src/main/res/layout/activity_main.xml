<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mainactivity_bgcolors"
    tools:context="com.example.myapplication.magiccakeapp.MainActivity">

    <Button
        android:text="@string/btnretete"
        android:id="@+id/btnretete"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textColor="@color/textDark"
        android:background="@drawable/buttons"
        android:layout_marginStart="42dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/btnsocial"
        android:id="@+id/btnsocial"
        android:textColor="@color/textDark"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:background="@drawable/buttons"
        android:layout_below="@+id/btnretete"
        android:layout_alignStart="@+id/btnretete"
        android:layout_marginTop="69dp" />

</RelativeLayout>
